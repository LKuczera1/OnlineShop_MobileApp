<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShop_MobileApp.Views.ProductDetailsView"
             x:Name="ThisView">

    <Grid RowDefinitions="*,Auto"
          Padding="5">

        <!-- Góra: przewijalna zawartość -->
        <ScrollView Grid.Row="0"
                    Padding="6">
            <VerticalStackLayout Spacing="12">

                <!-- Duże zdjęcie -->
                <Border StrokeThickness="0"
                        BackgroundColor="Black"
                        HeightRequest="400"
                        MaximumWidthRequest="400">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>

                    <Border.Clip>
                        <RoundRectangleGeometry CornerRadius="14" Rect="0,0,9999,9999" />
                    </Border.Clip>

                    <Image Source="{Binding ImageSource}"
                           Aspect="AspectFill"
                           BackgroundColor="White" />
                </Border>

                <!-- Nazwa -->
                <Label Text="{Binding Name}"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       LineBreakMode="WordWrap" />

                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      Margin="0,0,0,0">

                    <Border StrokeThickness="0"
                            BackgroundColor="Gray"
                            HeightRequest="30"
                            Grid.Column="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="4" />
                        </Border.StrokeShape>

                        <Label Text="{Binding Price, StringFormat='Price: {0:0.00}'}"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.85"
                               LineBreakMode="WordWrap" 
                               VerticalOptions="Center"
                               Margin="5,5,5,5"/>

                    </Border>

                    <Border StrokeThickness="0"
                            BackgroundColor="Gray"
                            HeightRequest="30"
                            Grid.Column="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="4" />
                        </Border.StrokeShape>

                        <Label Text="{Binding Stock, StringFormat='Stock: {0:0.###########}'}"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.85"
                               LineBreakMode="WordWrap" 
                               VerticalOptions="Center"
                               Margin="5,5,5,5"/>

                    </Border>
                </Grid>

                <!-- Opis -->
                <Label Text="{Binding Description}"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.85"
                       LineBreakMode="WordWrap" />


                

            </VerticalStackLayout>
        </ScrollView>
        

        <!-- Dół: przyciski -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              ColumnSpacing="12"
              Margin="5,5,5,0"
              MaximumWidthRequest="700">

            <Button Grid.Column="0" 
                    Text="Back To Catalog" 
                    HorizontalOptions="Fill" 
                    VerticalOptions="Center"
                    CornerRadius="10"
                    HeightRequest="40"
                    Command="{Binding Source={x:Reference ThisView}, Path=GoBackCommand}" />

            <Button Grid.Column="1" 
                    Text="Add to cart" 
                    HorizontalOptions="Fill" 
                    VerticalOptions="Center"
                    CornerRadius="10"
                    HeightRequest="40"/>

        </Grid>

    </Grid>
</ContentView>
