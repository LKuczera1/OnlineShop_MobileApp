<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShop_MobileApp.Views.MainPage">

    
    <AbsoluteLayout>

        <!-- Allert banner -->
        <Border x:Name="AllertBanner"
                AbsoluteLayout.LayoutBounds="0,0,1,100"
                AbsoluteLayout.LayoutFlags="WidthProportional"
                MinimumHeightRequest="35"
                Padding="12"
                Margin="12,12,12,0"
                StrokeThickness="2"
                Stroke="#A30000"
                BackgroundColor="#470000"
                IsVisible="{Binding allert.IsVisible}"
                TranslationY="0"
                ZIndex="200"
                InputTransparent="True">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="6">
                <Label Text="{Binding allert.Title}"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                <BoxView HeightRequest="1"
                         Opacity="0.7"
                         HorizontalOptions="Fill" />

                <Label Text="{Binding allert.Description}"
                       TextColor="White"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>

        <!-- Message banner -->
        <Border x:Name="MessageBanner"
                AbsoluteLayout.LayoutBounds="0,0,1,60"
                AbsoluteLayout.LayoutFlags="WidthProportional"
                MinimumHeightRequest="35"
                Padding="12"
                Margin="12,12,12,0"
                StrokeThickness="2"
                Stroke="#00FA0B"
                BackgroundColor="#00D10A"
                IsVisible="{Binding message.IsVisible}"
                TranslationY="0"
                ZIndex="200"
                InputTransparent="True">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>

            <Label Text="{Binding message.Description}"
                   TextColor="White"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />
        </Border>

        <!-- Top bar -->

        <Grid RowDefinitions="auto,*,auto"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All"
              Padding="0">

            <Grid Grid.Row="0"
                  BackgroundColor="{DynamicResource UpperBarColor}"
                  VerticalOptions="Start">
                <Button Text="..."
                        HeightRequest="40"
                        WidthRequest="40"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"
                        Clicked="OnMenuClicked" />
                <Label Text="OnlineShop"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="25" />
            </Grid>

            <!-- Content -->
            <ContentView Grid.Row="1"
                         Content="{Binding CurrentView}"
                         x:Name="Host" />

            <!-- Bottom bar -->
            <Grid Grid.Row="2"
                  BackgroundColor="{DynamicResource LowerBarColor}"
                  VerticalOptions="Start"
                  MinimumHeightRequest="60">
                <Grid ColumnDefinitions="2.12*,0.05*,2.12*,0.05*,2.12*,0.05*,2.12*"
                      MaximumWidthRequest="700"
                      VerticalOptions="Center"
                      Padding="0">
                    <Button Grid.Column="0"
                            Padding="1,14,1,14"
                            Text="Catalog"
                            CornerRadius="5"
                            HeightRequest="50"
                            Command="{Binding SwitchTabCommand}"
                            CommandParameter="Catalog"
                            FontSize="16" />
                    <Button Grid.Column="2"
                            Padding="1,14,1,14"
                            Text="Cart"
                            CornerRadius="5"
                            HeightRequest="50"
                            Command="{Binding SwitchTabCommand}"
                            CommandParameter="Cart"
                            FontSize="16" />
                    <Button Grid.Column="4"
                            Padding="1,14,1,14"
                            Text="Orders"
                            CornerRadius="5"
                            HeightRequest="50"
                            Command="{Binding SwitchTabCommand}"
                            CommandParameter="Orders"
                            FontSize="16" />
                    <Button Grid.Column="6"
                            Padding="1,14,1,14"
                            Text="Account"
                            CornerRadius="5"
                            HeightRequest="50"
                            Command="{Binding SwitchTabCommand}"
                            CommandParameter="Account"
                            FontSize="16" />
                </Grid>
            </Grid>

            <!-- Side menu -->
            <Grid x:Name="MenuOverlay"
                  Grid.RowSpan="3"
                  IsVisible="False"
                  BackgroundColor="#80000000"
                  ZIndex="100"
                  Padding="0">

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped" />
                </Grid.GestureRecognizers>

                <Grid x:Name="MenuPanel"
                      BackgroundColor="{DynamicResource BackgroundColor}"
                      WidthRequest="280"
                      HorizontalOptions="Start"
                      TranslationX="-320"
                      Padding="0">

                    <VerticalStackLayout Padding="5"
                                         Spacing="6">
                        <Label Text="Menu"
                               FontSize="20" />
                        <Border StrokeThickness="0"
                                BackgroundColor="{DynamicResource UpperBarColor}"
                                Padding="5">

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="5">

                                <Label Text="Switch color theme" />

                                <Button Text="Light Theme"
                                        Command="{Binding SwitchToLightTheme}" />
                                <Button Text="Dark Theme"
                                        Command="{Binding SwitchToDarkTheme}" />
                                <Button Text="Gold Theme"
                                        Command="{Binding SwitchToGoldTheme}" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Grid.GestureRecognizers>
                </Grid>
            </Grid>
        </Grid>
    </AbsoluteLayout>
</ContentPage>