<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShop_MobileApp.Views.MainPage">

    <AbsoluteLayout>

        <!-- CAŁY DOTYCHCZASOWY UKŁAD STRONY -->
        <Grid RowDefinitions="auto,*,auto"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <!-- GÓRNY PASEK -->
            <Grid Grid.Row="0" BackgroundColor="#222" Padding="12,0" VerticalOptions="Start">
                <Button Text="..." HeightRequest="40" WidthRequest="40"
                        VerticalOptions="Center" HorizontalOptions="Start"
                        Clicked="OnMenuClicked"/>
                <Label Text="OnlineShop" TextColor="White"
                       VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>

            <!-- CONTENT (środek) -->
            <ContentView Grid.Row="1"
                         Content="{Binding CurrentView}"
                         x:Name="Host"/>

            <!-- DOLNY PASEK -->
            <Grid Grid.Row="2" BackgroundColor="#111" Padding="5"
                  VerticalOptions="Start" MinimumHeightRequest="80">
                <Grid MaximumWidthRequest="700">
                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="8" Margin="5">
                        <Button Grid.Column="0" Text="Catalog"
                                CornerRadius="10" HeightRequest="70"
                                Command="{Binding SwitchTabCommand}"
                                CommandParameter="Catalog" />
                        <Button Grid.Column="1" Text="Cart"
                                CornerRadius="10" HeightRequest="70"
                                Command="{Binding SwitchTabCommand}"
                                CommandParameter="Cart" />
                        <Button Grid.Column="2" Text="Orders"
                                CornerRadius="10" HeightRequest="70"
                                Command="{Binding SwitchTabCommand}"
                                CommandParameter="Orders" />
                        <Button Grid.Column="3" Text="Account"
                                CornerRadius="10" HeightRequest="70"
                                Command="{Binding SwitchTabCommand}"
                                CommandParameter="Account" />
                    </Grid>
                </Grid>
            </Grid>

            <!-- Boczne menu (overlay, ale nadal w gridzie strony) -->
            <Grid x:Name="MenuOverlay"
                  Grid.RowSpan="3"
                  IsVisible="False"
                  BackgroundColor="#80000000"
                  ZIndex="100">

                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayTapped"/>
                </Grid.GestureRecognizers>

                <Grid x:Name="MenuPanel"
                      BackgroundColor="#1E1E1E"
                      WidthRequest="320"
                      HorizontalOptions="Start"
                      TranslationX="-320">

                    <VerticalStackLayout Padding="16" Spacing="12">
                        <Label Text="Menu" TextColor="White" FontSize="20"/>
                        <Border StrokeThickness="0"
                                BackgroundColor="Black"
                                Padding="5">
                            
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="5" />
                            </Border.StrokeShape>

                            <VerticalStackLayout Spacing="5">

                                <Label Text="Switch color theme" />

                                <Button Text="Light Theme"
                                        Command="{Binding SwitchToLightTheme}"/>
                                <Button Text="Dark Theme"
                                        Command="{Binding SwitchToDarkTheme}" />
                                <Button Text="Gold Theme"
                                        Command="{Binding SwitchToGoldTheme}" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer />
                    </Grid.GestureRecognizers>
                </Grid>
            </Grid>

        </Grid>

        <!-- BANNER OVERLAY (NIE WPŁYWA NA LAYOUT) -->
        <Border x:Name="AllertBanner"
                AbsoluteLayout.LayoutBounds="0,0,1,-1"
                AbsoluteLayout.LayoutFlags="WidthProportional"
                MinimumHeightRequest="35"
                Padding="12"
                Margin="12,12,12,0"
                StrokeThickness="2"
                Stroke="#A30000"
                BackgroundColor="#470000"
                IsVisible="{Binding allert.IsAllertVisible}"
                TranslationY="-300"
                ZIndex="200"
                InputTransparent="True">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="6">
                <Label Text="{Binding allert.Title}"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                <BoxView HeightRequest="1" Opacity="0.7" HorizontalOptions="Fill" />

                <Label Text="{Binding allert.Description}"
                       TextColor="White"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Border>

        <!-- BANNER OVERLAY (NIE WPŁYWA NA LAYOUT) -->
        <Border x:Name="MessageBanner"
                AbsoluteLayout.LayoutBounds="0,0,1,-1"
                AbsoluteLayout.LayoutFlags="WidthProportional"
                MinimumHeightRequest="35"
                Padding="12"
                Margin="12,12,12,0"
                StrokeThickness="2"
                Stroke="#00FA0B"
                BackgroundColor="#4FFF57"
                IsVisible="{Binding message.IsMessageVisible}"
                TranslationY="-300"
                ZIndex="200"
                InputTransparent="True">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>

            <Label Text="{Binding message.Description}"
                   TextColor="White"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />
        </Border>

    </AbsoluteLayout>
</ContentPage>